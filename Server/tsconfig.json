{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "global.d.ts"]
}
